{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python39", "pip"]
        },
        "install": {
          "cmds": ["pip install -r requirements.txt"]
        },
        "build": {
          "cmds": []
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python voice_server.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

